<Profile>

<Name>Kill Izual</Name>

<KillMonsters>True</KillMonsters>
<PickupLoot>true</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />

<Order>
<While condition="CurrentWorldId != 121579 and CurrentWorldId != 214956">
	<UseWaypoint waypointNumber="44" questId="1"/>
	<WaitTimer questId="1" stepId="1" waitTime="500"/>
</While>

	<If condition="CurrentWorldId == 121579">
      <AWTrinityExploreDungeon questId="1" stepId="2"  until="ObjectFound" objectDistance="150" actorId="225195" boxTolerance="0.65" boxSize="15" pathPrecision="40">
        <PrioritizeScenes>
          <PriorityScene sceneName="Exit" />
        </PrioritizeScenes>
        <IgnoreScenes>
          <IgnoreScene sceneName="_N_" />
          <IgnoreScene sceneName="_S_" />
          <IgnoreScene sceneName="_E_" />
          <IgnoreScene sceneName="_W_" />
        </IgnoreScenes>
      </AWTrinityExploreDungeon>
      <!-- The Great Span -->
      <MoveToActor questId="1" stepId="2" actorId="225195" isPortal="True" destinationWorldId="214956" interactRange="20" />
      <WaitTimer questId="1" stepId="2" waitTime="1000" />
	 </If>
    <If condition="CurrentWorldId == 214956">
      <WaitTimer questId="1" stepId="2" waitTime="1000" />
      <!-- Kill Izual -->
      <SafeMoveTo questId="1" stepId="2" name="Izual" pathPrecision="10" x="583" y="558" z="0" />
	  <While condition="Me.IsInBossEncounter">
		<WaitTimer questId="1" stepId="2" waitTime="1000" />
	  </While>
	  <!-- try to counteract the healthglobe run -->
	  <SafeMoveTo questId="1" stepId="2" name="Izual" pathPrecision="10" x="583" y="558" z="0" />
    </If>

	<TrinityLoadProfile nodelay="True" file="act4.xml" />
</Order>
</Profile>